{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "g++编译",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "isBackground": false
        },
        {
            "label": "打印变量值",
            "type": "shell",
            "command": "printf",
            "args": [
                "VS Code 变量测试:\n- 工作区: %s\n- 文件: %s\n- 目录: %s\n-目录2: %s\n -gcc: %s\n",
                "${workspaceFolder}",
                "${fileBasenameNoExtension}",
                "${file}",
                "${fileDirname}",
            ],
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}